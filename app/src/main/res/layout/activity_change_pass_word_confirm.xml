<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.setting.ChangePassWordAskActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_back_to_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/teal_200"
            android:textSize="20sp"
            android:drawableLeft="@mipmap/left"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="修改密码"
            android:textColor="#E82828"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_login_form"
        >
        <EditText
            android:id="@+id/et_password_new"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:inputType="textPassword"
            android:focusedByDefault="true"
            android:background="@null"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重复新密码"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_login_form"
        >
        <EditText
            android:id="@+id/et_password_new_confirm"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_save_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:background="@color/teal_200"
        android:layout_marginRight="15dp"
        />
</LinearLayout>