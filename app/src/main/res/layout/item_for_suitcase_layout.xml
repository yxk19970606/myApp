<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:background="@drawable/shape_suitcase_item"
    >
    <TextView
        android:id="@+id/tv_suitcase_title"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/layout_drug_detail"
        android:background="@drawable/shape_item_click_item_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_suitcase_head_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_round_image"
            android:text=""
            android:textSize="30sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="18sp"
            android:text="馈士大夫"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:drawableRight="@mipmap/icon_left_arrow"
            android:layout_marginRight="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_add_suitcase_reminder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/teal_200"
            android:background="@drawable/shape_suitcase_button_bg"
            android:text="添加提醒"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_stop_suitcase_reminder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/teal_200"
            android:background="@drawable/shape_suitcase_button_bg"
            android:text="停止服药"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_have_brought_drug"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/teal_200"
            android:background="@drawable/shape_suitcase_button_bg"
            android:text="已买药"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>