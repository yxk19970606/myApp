<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.myfragment.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/back_to_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/teal_200"
            android:textSize="20sp"
            android:drawableLeft="@mipmap/left"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="设置"
            android:textColor="#E82828"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
     <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_login_form"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/label_identity_setting"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="身份设置"
            android:layout_centerVertical="true"
            android:textSize="@dimen/more_font_size"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_user_identity"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="普通用户"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_user_identity_right_arrow"
            android:layout_centerVertical="true"
            android:textSize="@dimen/more_font_size"
            android:textColor="#716E6E"
            />
        <ImageView
            android:id="@+id/iv_user_identity_right_arrow"
            android:layout_width="@dimen/arro_size"
            android:layout_height="@dimen/arro_size"
            android:src="@mipmap/icon_left_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        </RelativeLayout>
     </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_login_form"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/label_change_password"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="修改密码"
                android:layout_centerVertical="true"
                android:textSize="@dimen/more_font_size"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="@dimen/arro_size"
                android:layout_height="@dimen/arro_size"
                android:src="@mipmap/icon_left_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_login_form"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/label_function_introduce"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="功能介绍"
            android:layout_centerVertical="true"
            android:textSize="@dimen/more_font_size"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="@dimen/arro_size"
            android:layout_height="@dimen/arro_size"
            android:src="@mipmap/icon_left_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#e8e7e7"/>
    <RelativeLayout
        android:id="@+id/label_feedback"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="我要反馈"
            android:layout_centerVertical="true"
            android:textSize="@dimen/more_font_size"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="@dimen/arro_size"
            android:layout_height="@dimen/arro_size"
            android:src="@mipmap/icon_left_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#e8e7e7"/>
    <RelativeLayout
        android:id="@+id/label_about_us"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="关于我们"
            android:layout_centerVertical="true"
            android:textSize="@dimen/more_font_size"
            android:textColor="@color/black"

            />
        <ImageView
            android:layout_width="@dimen/arro_size"
            android:layout_height="@dimen/arro_size"
            android:src="@mipmap/icon_left_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>